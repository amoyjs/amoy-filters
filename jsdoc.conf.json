{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "filters",
            "bundle"
        ],
        "excludePattern": "(node_modules|lib|dist)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        },
        "applicationName": "Amoy Filters",
        "footer": "Made with ♥ by Amoy Digital (warmrabit.com)",
        "copyright": "Amoy Copyright © 2013-2017 Mat Groves.",
        "googleAnalytics": "UA-103772589-3",
        "meta": {
            "title": "AmoyFilters Documentation",
            "description": "API Documentation for Amoy filters",
            "keyword": "filters, webgl, amoy"
        },
        "linenums": true
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": false
    },
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "private": false,
        "lenient": true,
        "destination": "./docs",
        "template": "./node_modules/@pixi/jsdoc-template"
    }
}
